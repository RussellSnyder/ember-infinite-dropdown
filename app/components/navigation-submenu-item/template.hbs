<@List.item as |Item|>
  {{#if @routeName}}
    <li>
      <a 
        class="block w-64 p-4 bg-grey-light cursor-pointer no-underline text-grey-darkest {{if Item.isActive 'bg-blue text-white' 'bg-grey-light text-grey-darkest'}}"
        {{action 'closeMenuAndTransitionTo' Item.clearActiveItems}}
        href={{url}}
      >
        {{yield}}
      </a>
    </li>
  {{else}}
    <li class="w-64 p-4 cursor-pointer {{if Item.isActive 'bg-blue text-white' 'bg-white'}}">
      {{yield (hash
        submenu=(component 'navigation-submenu'
        Item=Item
        tetherTarget=(concat '#' elementId)
        attachment='top left'
        targetAttachment='top right'
        )
      )}}
    </li>
  {{/if}}
</@List.item>
