<@List.item as |Item|>

  {{#if @routeName}}
    <li>
      <a 
        class="block w-64 p-4 bg-grey-light cursor-pointer no-underline text-grey-darkest {{if Item.isActive 'bg-blue text-white' 'bg-grey-light text-grey-darkest'}}"
        {{action 'transitionTo'}}
        href={{url}}
      >
        {{yield}}
      </a>
    </li>
  {{else}}
    <li class="w-64 p-4 bg-grey-light cursor-pointer
      {{if Item.isActive 'bg-blue text-white' 'bg-grey-light'}}
    ">
      {{yield (hash
        submenu=(component 'navigation-submenu'
          Item=Item
          tetherTarget=(concat '#' elementId)
          attachment='top left'
          targetAttachment='bottom left'
        )
      )}} 
    </li>
  {{/if}}

</@List.item>
